{
  "manifest_version": 2,
  "name": "KidsNote Downloader",
  "version": "1.9",
  "author": "cloim",
  "description": "Downloader for KidsNote",
  "icons": {
    "16": "images/icon16.png",
    "19": "images/icon19.png",
    "24": "images/icon24.png",
    "32": "images/icon32.png",
    "48": "images/icon48.png",
    "64": "images/icon64.png",
    "128": "images/icon128.png",
    "256": "images/icon256.png",
    "512": "images/icon512.png",
    "1024": "images/icon1024.png"
  },

  "background": {
    "scripts": ["js/background.js"],
    "persistent": false
  },
  "content_scripts": [{
    "matches": [
      "https://www.kidsnote.com/home/",
      "https://www.kidsnote.com/reports/*",
      "https://www.kidsnote.com/albums/*"
    ],
    "css": [
      "css/bootstrap.min.css",
      "css/bootstrap-theme.min.css",
      "css/bootstrap-datetimepicker.min.css",
      "css/contents.css"
    ],
    "js": [
      "js/jquery-3.3.1.min.js",
      "js/moment.js",
      "js/bootstrap.min.js",
      "js/bootstrap-datetimepicker.min.js",
      "js/jszip.js",
      "js/contents.js"
    ]
  }],
  "page_action": {
    "default_icon": {
      "16": "images/icon16.png",
      "19": "images/icon19.png",
      "24": "images/icon24.png",
      "32": "images/icon32.png",
      "48": "images/icon48.png",
      "64": "images/icon64.png",
      "128": "images/icon128.png",
      "256": "images/icon256.png",
      "512": "images/icon512.png",
      "1024": "images/icon1024.png"
    },
    "default_title": "KidsNote Downloader",
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "web_accessible_resources": [
    "images/*.png",
    "fonts/*"
  ],
  "permissions": [
    "declarativeContent",
    "storage",
    "*://*.kidsnote.com",
    "<all_urls>"
  ]
}